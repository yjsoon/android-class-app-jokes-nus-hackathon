<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffff0900">

    <TextView android:text="@string/joke_placeholder" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/joke_question_text"
        android:textColor="#fff8e7ff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/punchline_placeholder"
        android:id="@+id/punchline_text"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/show_punchline_button"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_punchline_text"
        android:id="@+id/show_punchline_button"
        android:layout_below="@+id/joke_question_text"
        android:layout_alignRight="@+id/show_next_joke_button"
        android:layout_alignEnd="@+id/show_next_joke_button"
        android:layout_marginTop="74dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_next_joke_text"
        android:id="@+id/show_next_joke_button"
        android:visibility="invisible"
        android:layout_below="@+id/punchline_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lol"
        android:id="@+id/lol_button"
        android:layout_below="@+id/show_next_joke_button"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout>
